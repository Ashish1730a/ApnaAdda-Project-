<% layout("/layout/boilerplate") %> 

    <body>
        <h3>All Listing</h3>
        <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->
        <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-4">
            <% for(let listing of allListing){ %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>%>"
                            class="card-img-top" alt="listing image" style="height: 15rem;">
                            <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %> <br>  
                                </b>
                                 &#8377; <%= listing.price ? listing.price.toLocaleString('en-IN') : "N/A" %> / night
                            </p>
                        </div>
                    </div>
                </a>

                <% } %>
        </div>








    </body>