<% layout("/layout/boilerplate") %>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3><b><b>
            <%= listing.title %>
          </b></b> </h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>"
        class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
        <h3></h3>
        <br>
        <%= listing.description %>
          <br>
          <%= listing.price.toLocaleString("en-IN") %>
            <br>
            <%= listing.location %>, <%= listing.country %>
                </p>
      </div>
    </div>



    <br>
    <!-- Button Row -->
    <div class="row mt-3">
      <div class="col-6 offset-3 d-flex justify-content-between">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-danger"
          style="background-color: #fe424d !important;">Edit</a>
        <form action="/listings/<%= listing.id %>?_method=DELETE" method="POST">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>
    </div>

    <div class="col-8 offset-3 mb-3">
      <br>
      <hr>

      <h4>Leave a Review</h4>

      <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" step="1" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-danger">Submit</button>
      </form>
      <hr>
      <h4>All Reviews</h4>
      <ul>
        <% for(let review of listing.reviews) { %>
              <li><%= review.comment %>, <b><%= review.rating %> Stars</b></li>
          <% } %>
      </ul>
    </div>
  </div>
  <br>